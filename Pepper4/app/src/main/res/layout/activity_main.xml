<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startMapping2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="208dp"
        android:text="StartMapping"
        app:layout_constraintBottom_toBottomOf="@+id/startMapping"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/startMapping"
        app:layout_constraintTop_toTopOf="@+id/startMapping" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="465dp"
        android:layout_height="0dp"
        android:layout_marginStart="416dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="114dp"
        app:layout_constraintBottom_toTopOf="@+id/startMapping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smiley" />

    <Button
        android:id="@+id/startMapping"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="207dp"
        android:layout_marginEnd="337dp"
        android:layout_marginBottom="141dp"
        android:text="StartMapping"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/startMapping2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>